<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B4E7F6"
    tools:context=".InsertarActivity">

    <EditText
        android:id="@+id/TextoEquipo"
        android:layout_width="377dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="16dp"
        android:background="#9DD2EC"
        android:backgroundTint="#9DD2EC"
        android:backgroundTintMode="src_over"
        android:ems="10"
        android:hint="Equipo"
        android:inputType="textPersonName"
        android:textColorHint="#0A22A5"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextoTitulo" />

    <TextView
        android:id="@+id/TextoTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar Registros"
        android:textAlignment="center"
        android:textColor="#D13E11"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextoNombre"
        android:layout_width="377dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="#9DD2EC"
        android:backgroundTint="#9DD2EC"
        android:backgroundTintMode="src_over"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:shadowColor="#752F2F"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColorHint="#0A22A5"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextoTitulo" />

    <EditText
        android:id="@+id/TextoEdad"
        android:layout_width="194dp"
        android:layout_height="68dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="109dp"
        android:background="#9DD2EC"
        android:backgroundTint="#9DD2EC"
        android:ems="10"
        android:hint="Edad"
        android:inputType="number"
        android:textColorHint="#0A22A5"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextoEquipo" />

    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="144dp"
        android:background="#FF5722"
        android:backgroundTint="#FF5722"
        android:backgroundTintMode="src_over"
        android:hapticFeedbackEnabled="false"
        android:text="Guardar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextoEdad" />

</androidx.constraintlayout.widget.ConstraintLayout>